<?php
echo "Enter the database hostname [localhost]: ";
$DB_HOST = substr(fgets(STDIN), 0, -1);
$DB_HOST = $DB_HOST === "" ? "localhost" : $DB_HOST;

echo "Enter the database port [3306]: ";
$DB_PORT = substr(fgets(STDIN), 0, -1);
$DB_PORT = $DB_PORT === "" ? 3306 : $DB_PORT;

echo "Enter the database name [db_modulephp]: ";
$DB_NAME = substr(fgets(STDIN), 0, -1);
$DB_NAME = $DB_NAME === "" ? "db_modulephp" : $DB_NAME;

echo "Enter the database user [modulephp]: ";
$DB_USER = substr(fgets(STDIN), 0, -1);
$DB_USER = $DB_USER === "" ? "modulephp" : $DB_USER;

echo "Digite a porta do banco de dados [false]: ";
$DB_PW = substr(fgets(STDIN), 0, -1);
$DB_PW = $DB_PW === "" ? false : $DB_PW;